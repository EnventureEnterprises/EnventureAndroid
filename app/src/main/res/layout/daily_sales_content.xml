<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_view_frag"
    android:layout_height="match_parent" tools:context=".ui.reports.MonthlyReportFragment">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/about_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/gallery"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_view_module_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"


            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="@dimen/grid_7">

            <TextView
                android:id="@+id/whyUrb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:keepScreenOn="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />




        </RelativeLayout>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/gallery2"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_view_module_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"


            />




    </LinearLayout>

</FrameLayout>