<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reports.DailyReportFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/profit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@anim/selector_raise"
            app:cardBackgroundColor="#4dbcd4"
            app:cardCornerRadius="4dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/profit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/grid_6"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/grid_3"
                        android:paddingTop="@dimen/grid_3"
                        android:text="Profit"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:text="Profit" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/profit_text"
                        android:layout_marginLeft="0dp"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profit_text"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="105dp"
                        android:layout_marginLeft="@dimen/grid_6"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/grid_3"
                        android:paddingTop="@dimen/grid_3"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        tools:text="4 items" />
                </RelativeLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/report_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profit_card"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="4">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/total_earned_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="8dp"
                android:layout_weight="2"
                android:clickable="false"
                android:stateListAnimator="@anim/selector_raise"
                app:cardBackgroundColor="#4dbcd4"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/total_earned_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"


                        android:layout_gravity="center"
                        android:gravity="center_horizontal"

                        android:maxLines="1"
                        android:paddingBottom="@dimen/grid_1"
                        android:paddingTop="@dimen/grid_1"
                        android:text="Total Earned"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:text="Total Earned"


                        />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"

                        android:layout_below="@+id/total_earned_text"

                        android:background="#ccc" />


                    <TextView
                        android:id="@+id/total_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:maxLines="1"

                        android:paddingBottom="@dimen/grid_1"
                        android:paddingTop="@dimen/grid_1"


                        android:textAlignment="center"

                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:text="4 items"


                        />
                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"

                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/total_spent_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/md_keylines"


                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="8dp"
                android:layout_weight="2"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@anim/selector_raise"


                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/total_spent_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:maxLines="1"

                        android:paddingBottom="@dimen/grid_1"
                        android:paddingTop="@dimen/grid_1"
                        android:text="Total spent"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:text="Total Spent"


                        />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"

                        android:layout_below="@+id/total_spent_text"

                        android:background="#ccc" />


                    <TextView
                        android:id="@+id/total_spent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view3"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/grid_1"
                        android:paddingTop="@dimen/grid_1"


                        android:textAlignment="center"

                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:text="4 items"


                        />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>