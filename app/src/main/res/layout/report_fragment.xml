<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_view_frag"
    android:layout_height="match_parent"
    tools:context=".ui.reports.DailyReportFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/profit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/header_container"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@anim/selector_raise"
            app:cardCornerRadius="4dp" >



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/grid_1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/profit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        tools:text="Profit"
                        android:text="Profit"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/grid_3"
                        android:paddingTop="@dimen/grid_3"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/grid_6"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/profit_text"
                        android:layout_marginLeft="0dp"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="4 items"
                        android:paddingBottom="@dimen/grid_3"
                        android:paddingTop="@dimen/grid_3"
                        android:layout_marginLeft="@dimen/grid_6"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:layout_below="@+id/profit_text"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="105dp" />
                </RelativeLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>



        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/report_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="4"
            android:layout_below="@id/profit_card"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/total_earned_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="8dp"
                android:clickable="false"
                android:background="@color/colorPrimary"
                android:stateListAnimator="@anim/selector_raise"
                app:cardCornerRadius="4dp" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect" >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/total_earned_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/grid_4"

                            android:layout_gravity="center"
                            android:gravity="center_horizontal"

                            tools:text="Total Earned"
                            android:text="Total Earned"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/grid_1"
                            android:paddingTop="@dimen/grid_1"
                            android:textColor="@color/white"




                            />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"

                            android:layout_below="@+id/total_earned_text"

                            android:background="#ccc" />



                        <TextView
                            android:id="@+id/total_earned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="4 items"
                            android:layout_below="@+id/view2"
                            android:paddingBottom="@dimen/grid_1"
                            android:paddingTop="@dimen/grid_1"
                            android:layout_marginLeft="@dimen/grid_4"

                            android:layout_gravity="center"


                            android:maxLines="1"

                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="30sp"


                            />
                    </RelativeLayout>





                </RelativeLayout>



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"

                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/total_spent_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="2"


                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:background="@color/colorPrimaryDark"

                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@anim/selector_raise"
                app:cardCornerRadius="4dp" >



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect2"


                    >





                    <RelativeLayout
                        android:layout_width="wrap_content"

                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:layout_alignParentRight="true"

                        android:layout_gravity="center"

                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/total_spent_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/grid_4"

                            tools:text="Total Spent"
                            android:text="Total spent"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/grid_1"
                            android:paddingTop="@dimen/grid_1"
                            android:textColor="@color/white"




                            />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"

                            android:layout_below="@+id/total_spent_text"

                            android:background="#ccc" />



                        <TextView
                            android:id="@+id/total_spent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="4 items"
                            android:layout_below="@+id/view3"
                            android:paddingBottom="@dimen/grid_1"
                            android:paddingTop="@dimen/grid_1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/grid_4"


                            android:maxLines="1"

                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="30sp"


                            />
                    </RelativeLayout>





                </RelativeLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>



    </RelativeLayout>

</FrameLayout>